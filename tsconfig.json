{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../cnc-tools/backend/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "../cnc-tools/backend/src/*"
      ]
    }
  },
  "include": [
    "../cnc-tools/backend/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "python_code",
    "../cnc-tools/backend/sample code"
  ]
}